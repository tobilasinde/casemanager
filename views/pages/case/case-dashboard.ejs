<style>
	.css-serial {counter-reset: serial-number;}
	.css-serial td:first-child::before {
		counter-increment: serial-number;
		content: counter(serial-number);
	}
</style>
<!-- begin:: Content -->
<div class="row">
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <h3 class="kt-portlet__head-title">
                    <%= title %>
                </h3>
            </div>
        </div>
        <div class="kt-portlet__body">


            <!--end: Search Form -->
        </div>
        <div class="kt-portlet__body kt-portlet__body--fit">

            <!--begin: Datatable -->
            <table class="kt-datatable" id="html_table" width="100%">
                <thead>
                    <tr>
                        <th title="Field #1">Case No</th>
                        <th title="Field #2">Subject</th>
                        <th title="Field #4">Department</th>
						<th title="Field #5">Status</th>
						<th title="Field #6">Priority</th>
                        <th title="Field #8"></th>
                    </tr>
                </thead>
                <tbody>
                    <% dash.myCases.forEach(function(casei) { %>
                        <tr>
                            <td><%= casei.id %></td>
							<td><%= casei.subject %></td>
							<td><%= casei.Department.department_name %></td>
							<td><%= casei.status %></td>
							<td><%= casei.priority %></td>
						</tr>
                    <% }) %>
                </tbody>
            </table>

            <!--end: Datatable -->
        </div>
    </div>
</div>
</div>
